@model IEnumerable<Department>
@* دي كدا بتبقي عشان اجيب الموديل نفسوmodel ال*@
@{
    ViewData["Title"] = "All Department";
}

<a asp-controller="Department" asp-action="Create" class="btn btn-success">Create New Department</a>

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["AlertMessage"]
        <span>&times;</span>
    </div>
}
@*Mode عشان الجيب الداتا اللي جواها بتبقي كدا*@
<form class="d-flex">
    <div class="mt-4">
        <input name="SearchString" type="search" placeholder="Department's Name" />
        <button class="ml-2 ,btn btn-dark" type="submit">Search</button>
        <a asp-controller="Department" asp-action="Index" class="ml-2 ,btn btn-light">Back To List</a>
    </div>
</form>
@if (Model.Count() > 0)
{
    <h1>All Departments</h1>

    <table class="table table-striped table-hover mt-3">
        <thead>
        <td>@Html.DisplayNameFor(d => d.Code)</td>
        <td>@Html.DisplayNameFor(d => d.Name)</td>
        <td>@Html.DisplayNameFor(d => d.DateOfCreation)</td>
        <td>Details</td>
        <td>Update</td>
        <td>Delete</td>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.DateOfCreation</td>
                    <td><a asp-controller="Department" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye"></i></a></td>
                    <td><a asp-controller="Department" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a></td>
                    <td><a asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a></td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning"> There Is No Department</div>
}