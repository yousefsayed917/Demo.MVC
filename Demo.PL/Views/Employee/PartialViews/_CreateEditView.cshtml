@model EmployeeViewModel
@inject IDepartmentRepository _departmentRepo

@{
    // var departments = new SelectList(ViewData["Departments"] as IEnumerable<Department>, nameof(Department.Id),nameof(Department.Name));
    var departments = new SelectList(await _departmentRepo.GetAllAsync(), nameof(Department.Id), nameof(Department.Name));
}

<div>
    <label class="col-form-label" asp-for="Name"></label>
    <input class="form-control" asp-for="Name" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div>
    <label class="col-form-label" asp-for="Age"></label>
    <input class="form-control" asp-for="Age" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>

<div>
    <label class="col-form-label" asp-for="Address"></label>
    <input class="form-control" asp-for="Address" />
</div>
<div>
    <label class="col-form-label" asp-for="Salary"></label>
    <input class="form-control" asp-for="Salary" />
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="DepartmentId" class="col-form-label"></label>
    <select asp-for="DepartmentId" class="form-control" asp-items="@departments">
        <option value="@null">-- Select Department --</option>
    </select>
</div>
<div>
    <label class="col-form-label" asp-for="Email"></label>
    <input class="form-control" asp-for="Email" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div>
    <label class="col-form-label" asp-for="PhoneNumber"></label>
    <input class="form-control" asp-for="PhoneNumber" />
    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
</div>
<div>
    <label class="col-form-label" asp-for="HireDate"></label>
    <input class="form-control" asp-for="HireDate" />
    <span asp-validation-for="HireDate" class="text-danger"></span>
</div>
<div>
    <label class="col-form-label" asp-for="IsActive"></label>
    <input class="form-control" asp-for="IsActive" />
    <span asp-validation-for="IsActive" class="text-danger"></span>
</div>